@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()
            <li class="center-align"><span>@User.Identity.GetUserName()</span></li>
            <li><a class="waves-effect waves-light btn pink accent-1" href="@Url.Action("Index", "Manage")" id="registerLink" title="Manage"><i class='material-icons left'>settings_applications</i>Manage</a></li>             
            <li><a class="waves-effect waves-light btn pink accent-1" href="javascript:document.getElementById('logoutForm').submit()"><i class='material-icons left'>power_settings_new</i>Log off</a></li>
            if (User.IsInRole("Admin"))
            {
                <li><a class="waves-effect waves-light btn pink accent-1" href="@Url.Action("Index", "Movies",new { Area = "Admin" })" id="registerLink" title="Admin"><i class='material-icons left'>settings_applications</i>Admin Area</a></li>
            }
    }
}
else
{
        <li><a class="waves-effect waves-light btn pink accent-1" href="@Url.Action("Register", "Account")" id="registerLink" title="Register"><i class='material-icons left'>person_add</i>Register</a></li>
        <li><a class="waves-effect waves-light btn pink accent-1" href="@Url.Action("Login", "Account")" id="loginLink" title="Log in"><i class='material-icons left'>person</i>Login</a></li>
}
