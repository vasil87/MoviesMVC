@model ICollection<TelerikMovies.Web.Models.Movie.SimpleMovieViewModel>


<div class="row">
    <div class="col s12">
        <div class="carousel medium">
            @foreach (var movie in Model)
            {
                <a class="carousel-item movie align-center" data-id="@movie.Id" href="@Url.Action("Details","Movies",new { id=movie.Id})">
                    <p class="overlay white-text">@movie.Name</p>
                    <div class="container">
                        <img class="responsive-img z-depth-5" src="@movie.ImgUrl">
                    </div>
                </a>
            }
        </div>
    </div>
</div>

