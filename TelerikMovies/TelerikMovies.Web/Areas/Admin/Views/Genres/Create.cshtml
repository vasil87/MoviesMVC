@model TelerikMovies.Web.Areas.Admin.Models.GenreCreateViewModel
@{
    string errors = string.Empty;
    ViewBag.Title = "Create Movie";
    ViewBag.Result = Model.Result;
}


@section css {
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/PageCss/Create.css" rel="stylesheet" />
}

<div class="row">
    <div class="col s12">
        <h2>Create Genre</h2>
        <hr />
        <br />
        <br />
        <br />
        @using (Html.BeginForm("Create", "Genres", FormMethod.Post, new { @class = "create-genre-form" }))
            {
            @Html.AntiForgeryToken()
                    <div class="row">         
                            @Html.LabelFor(x => Model.Name)
                            @Html.EditorFor(x => Model.Name, new { htmlAttributes = new { @class = "autocomplete", autocomplete = "off" ,id="genre" } })
                            @Html.ValidationMessageFor(x => x.Name, "", new { @class = "red-text text-darken-4" })   
                    </div>
                    <button class="btn waves-effect waves-light  yellow accent-4" type="submit" name="action">
                        Create
                        <i class="material-icons right">send</i>
                    </button>
        }
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/PageScripts/Admin/create-genre.js"></script>
}
